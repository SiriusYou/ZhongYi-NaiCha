/* recipe-create.wxss */
page {
  background-color: #f7f7f7;
  height: 100%;
}

.recipe-create-page {
  min-height: 100vh;
  position: relative;
}

/* Header */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon {
  font-size: 40rpx;
  color: #333;
}

.title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.submit-btn {
  padding: 12rpx 30rpx;
  background-color: #8B6F4E;
  color: #fff;
  font-size: 28rpx;
  border-radius: 30rpx;
}

.submit-btn.disabled {
  background-color: #ccc;
}

/* Form Container */
.form-container {
  padding: 20rpx 30rpx;
  height: calc(100vh - 100rpx);
}

/* Form Section */
.form-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.03);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
}

.required {
  color: #E74C3C;
  margin-left: 10rpx;
}

/* Image Upload */
.image-upload {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  position: relative;
}

.upload-preview {
  width: 100%;
  height: 100%;
}

.upload-placeholder {
  width: 100%;
  height: 100%;
  background-color: #f0f0f0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
}

.upload-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

/* Form Items */
.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.form-input {
  background-color: #f7f7f7;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  width: 100%;
  box-sizing: border-box;
}

.form-textarea {
  background-color: #f7f7f7;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  width: 100%;
  min-height: 180rpx;
  box-sizing: border-box;
}

.form-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.form-item.half {
  width: 48%;
}

/* Category and Property Lists */
.category-list, .property-list, .constitution-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.category-item, .property-item, .constitution-item {
  margin: 10rpx;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
  background-color: #f0f0f0;
  border: 1rpx solid #e0e0e0;
}

.category-item.selected, .property-item.selected, .constitution-item.selected {
  background-color: #8B6F4E;
  color: #fff;
  border-color: #8B6F4E;
}

/* Difficulty Slider */
.difficulty-labels {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* Ingredients */
.ingredient-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: #f7f7f7;
  border-radius: 8rpx;
  padding: 15rpx;
}

.ingredient-name {
  flex: 3;
  padding-right: 15rpx;
}

.ingredient-amount {
  flex: 1;
  padding-right: 15rpx;
}

.ingredient-unit {
  width: 120rpx;
  text-align: center;
  font-size: 28rpx;
}

.ingredient-action {
  width: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  font-size: 40rpx;
  color: #E74C3C;
}

.picker {
  padding: 10rpx 20rpx;
  background-color: #fff;
  border-radius: 6rpx;
  font-size: 26rpx;
}

/* Steps */
.step-item {
  display: flex;
  margin-bottom: 30rpx;
  position: relative;
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #8B6F4E;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.step-content {
  flex: 1;
  background-color: #f7f7f7;
  border-radius: 8rpx;
  padding: 20rpx;
}

.step-content textarea {
  width: 100%;
  min-height: 120rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  background-color: transparent;
}

.step-image {
  width: 100%;
  height: 200rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.step-image image {
  width: 100%;
  height: 100%;
}

.image-placeholder {
  width: 100%;
  height: 100%;
  background-color: #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 26rpx;
}

.step-action {
  position: absolute;
  top: 0;
  right: 0;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Add Button */
.add-btn {
  text-align: center;
  color: #8B6F4E;
  font-size: 28rpx;
  padding: 20rpx 0;
  background-color: rgba(139, 111, 78, 0.1);
  border-radius: 8rpx;
  margin-top: 20rpx;
}

/* Submit Button */
.submit-container {
  padding: 40rpx 0 100rpx;
}

.submit-button {
  background-color: #8B6F4E;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
  width: 80%;
  padding: 20rpx 0;
}

.submit-button.disabled {
  background-color: #ccc;
}

/* Loading Overlay */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #8B6F4E;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 