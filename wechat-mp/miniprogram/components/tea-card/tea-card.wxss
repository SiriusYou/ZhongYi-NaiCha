.tea-card {
  width: 300rpx;
  height: 360rpx;
  background-color: #FFFFFF;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  transition: all 0.3s;
}

.tea-card.loading {
  opacity: 0.7;
}

.tea-card:active {
  transform: scale(0.98);
}

.tea-image-container {
  position: relative;
  height: 180rpx;
  width: 100%;
  overflow: hidden;
}

.tea-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.recommended-tag {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background-color: #FF6B6B;
  color: #FFFFFF;
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
}

.tea-info {
  padding: 15rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.tea-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.tea-description {
  font-size: 24rpx;
  color: #666666;
  flex: 1;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 10rpx;
  line-height: 1.3;
}

.tea-tags {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  font-size: 20rpx;
  color: #8B6F4E;
  background-color: rgba(139, 111, 78, 0.1);
  padding: 2rpx 10rpx;
  border-radius: 10rpx;
  margin-right: 10rpx;
  margin-bottom: 5rpx;
  white-space: nowrap;
} 